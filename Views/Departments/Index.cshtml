@model IEnumerable<Kompanija.Models.Department>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.ActionLink("vwDepartment", "vwDepartment") @*link do vwdepartmenta*@
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.departmentNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.departmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.departmentLocation)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.departmentNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.departmentName)
            </td>
            <td>
                @Html.ActionLink(item.departmentLocation, "Index2", "Employees", new { DepartmentId = item.Id }, null)
                <span class="badge">@item.Employees.Count</span> @*prikaze koliko je zaposlenika*@
                @*a ovo gore je link na koji kada se klikne prikaze zaposlenike u tom departmentu*@
                @*@Html.DisplayFor(modelItem => item.departmentLocation)*@
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
